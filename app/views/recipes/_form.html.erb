<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>
  <%= f.fields_for :ingredients do |f| %>
    <%= f.label :quantity_1 %>
    <%= f.text_field :quantity_1 %><br>
    <%= f.label :name_1 %>
    <%= f.text_field :name_1 %><br>
    <%= f.label :quantity_2 %>
    <%= f.text_field :quantity_2 %><br>
    <%= f.label :name_2 %>
    <%= f.text_field :name_2 %><br>
  <% end %>
  <%= f.submit %>
<% end %>
